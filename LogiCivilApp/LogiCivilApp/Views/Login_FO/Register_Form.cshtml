@{
    ViewData["Title"] = "LoginFO Register_Form";
    Layout = "_Layout_Login_FO";
}


<div class="container-scroller d-flex">
    <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
        <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
            <div class="row flex-grow">

                <div class="col-lg-6 register-half-bg d-none d-lg-flex flex-row">
                    @* <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2024  All rights reserved.</p> *@
                </div>
                
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-transparent text-left p-3">
                        @* <div class="brand-logo">
                            <img src="https://www.svgrepo.com/show/271929/kilograms-justice.svg" width="100" height="100" alt="logo">
                        </div> *@
                        <h4>Nouveau sur Logicivil ? <h4>
                        <h6 class="font-weight-light">Rejoignez-nous dès aujourd’hui ! </h6>
                        <form class="pt-3">

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label style="font-size: .8125rem;">Nom</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="nom">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label style="font-size: .8125rem;">Prenom</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="prenom">
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label style="font-size: .8125rem;">Adresse</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="adresse">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label style="font-size: .8125rem;">Tel</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="téléphone">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label style="font-size: .8125rem;">Numero D'ordre</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="numero d'ordre">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label style="font-size: .8125rem;">Date de Naissance</label>
                                        <div class="input-group">
                                            <input type="date" class="form-control" placeholder="numero d'ordre">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Identifiant</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-email-outline"></i>
                                        </span>
                                    </div>
                                    <input type="email" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="email">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label style="font-size: .8125rem;">Password</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" placeholder="password">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label>Genre</label>
                                        <select class="form-control form-control" id="exampleFormControlSelect2">
                                            <option value="">Homme</option>
                                            <option value="">Femme</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3">
                                <button class="btn btn-block btn-outline-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                 Already have an account? <a asp-action="Index" asp-controller="Login_FO" class="">Login</a>
                            </div>

                        </form>
                    </div>
                </div>
               
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
